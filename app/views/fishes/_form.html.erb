<%= form_with model: fish, url: path do |form| %>
  
    <div class="errormsg">
        <% fish.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>
  
    <br/>
    
    <table class="table" id="form-table">
     <tr>
        <td><%= form.label :name, 'Name' %>  </td>
        <td><%= form.text_field :name %> </td>
     </tr>
     <tr>
        <td><%= form.label :age, 'Age' %>  </td>
        <td><%= form.text_field :age %> </td>
     </tr>
     
     </table>
  
     <br/>
     <%= form.submit %>
     
<% end %>