<%= form_with model: fish do |form| %>
  
    <div style='color:red'>
        <% fish.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>
  
    <br/>
    
    <table class="table" style='width:70%; margin:0 auto; text-align:left;'>
     <tr>
        <td><%= form.label :name, 'Name' %>  </td>
        <td><%= form.text_field :name %> </td>
     </tr>
     <tr>
        <td><%= form.label :age, 'Age' %>  </td>
        <td><%= form.text_field :age %> </td>
     </tr>
     
     </table>
  
     <br/>
     <%= form.submit %>
     
<% end %>